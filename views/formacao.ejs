<%- include('partials/header', { activePage: activePage }) %>

<section id="formacao" class="container">
    <h1 class="section-title">Minha Formação Acadêmica</h1>
    <p class="intro-text">Aqui está um resumo da minha trajetória educacional e cursos realizados.</p>

    <div class="timeline">
        <% if (typeof listaFormacoes !== 'undefined' && listaFormacoes.length > 0) { %>
            
            <% listaFormacoes.forEach(item => { %>
                <div class="card formacao-card">
                    <h3><%= item.curso %></h3>
                    <h4><%= item.instituicao %></h4>
                    <span class="date">
                        <%= new Date(item.data_inicio).toLocaleDateString('pt-BR', { timeZone: 'UTC', month: '2-digit', year: 'numeric' }) %> - 
                        <%= item.data_fim ? new Date(item.data_fim).toLocaleDateString('pt-BR', { timeZone: 'UTC', month: '2-digit', year: 'numeric' }) : 'Atualmente' %>
                    </span>
                    <% if (item.descricao) { %>
                        <p><%= item.descricao %></p>
                    <% } %>
                </div>
                <br>
            <% }) %>

        <% } else { %>
            <p>Informações sobre formação sendo atualizadas...</p>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>